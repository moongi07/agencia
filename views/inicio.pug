extends ./layout/index
block slider
    .slider
        h1 Río de Janeiro
        em aventura
block contenido
    main.container.mt-5
        h2.text-center.mb-5 Sobre Nosotros
        .row.mb-5
            //- Columna para el texto a la izquierda
            .col-md-6
                p
                    | Lorem ipsum dolor sit amet consectetur adipiscing elit fermentum, imperdiet parturient consequat commodo primis nullam conubia quis dis, felis vel lacus dignissim habitasse augue pharetra. Sapien dui eu tristique vitae mauris mattis porttitor, platea elementum congue faucibus interdum quisque, ultricies aptent ac fringilla nisl nunc.
                p
                    | Tortor lectus habitant etiam integer potenti molestie nulla habitasse, risus a semper maecenas facilisi in ultricies sem, gravida parturient varius venenatis imperdiet sociosqu natoque. Primis auctor sollicitudin justo nisl augue sagittis e

            //- Columna para la imagen a la derecha
            .col-md-6
                img(src="/img/inicio_nosotros.jpg", alt="Imagen de Nosotros", class="img-fluid rounded")

        .row.proximos-viajes
                    each viaje in viajes
                        .col-md-6.col-lg-4.mb-4
                            .card
                                img.card-img-top(src=`/img/destinos_${viaje.imagen}.jpg`)
                                .card-body
                                    h2=viaje.titulo
                                    p
                                    svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' width='24' height='24' stroke-width='2')
                                        path(d='M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z')
                                        path(d='M16 3v4')
                                        path(d='M8 3v4')
                                        path(d='M4 11h16')
                                        path(d='M7 14h.013')
                                        path(d='M10.01 14h.005')
                                        path(d='M13.01 14h.005')
                                        path(d='M16.015 14h.005')
                                        path(d='M13.015 17h.005')
                                        path(d='M7.01 17h.005')
                                        path(d='M10.01 17h.005')
                                    // Aquí usamos `moment` para formatear la fecha
                                    | #{moment(viaje.fecha_ida).format('DD/MM/YYYY')} - #{moment(viaje.fecha_vuelta).format('DD/MM/YYYY')}
                                    p
                                    svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' width='24' height='24' stroke-width='2')
                                        path(d='M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0')
                                        path(d='M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0')
                                        path(d='M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855')
                                    |  #{viaje.disponibles} Disponibles

                                    p=viaje.descripcion.substring(0, 100) + '...'
                                    a(href=`viajes/${viaje.slug}`, class="btn btn-success btn-block") Más Información

        .descuento
                .container
                    .row
                        .col-md-6
                            .contenido
                                h3 5% de Descuento
                                p.titulo Viaje a Canadá
                                p.fecha 20 de Marzo de 2025 - 29 de Marzo de 2025
                                p.precio 2.500 €


        .container
                h2.mt-5.text-center TESTIMONIOS
                include ./layout/layout_testimonio